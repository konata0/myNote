        .editing
            padding 20px

    .p-type
        font-size 16px
        margin 5px 45px 
        .normal
            padding 2px 7px
            white-space pre-wrap
        .editMode
            padding 0 5px
            white-space pre-wrap
            border 2px solid
            border-radius 10px;
            border-color transparent
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .rightClick
            padding 0 5px
            white-space pre-wrap
            border 2px solid
            border-radius 10px;
            border-color my-blue
            box-shadow 0px 0px 5px my-blue
        .editing
            padding 20px
            white-space pre-wrap
            i
                float right
                margin 10px

    .code-type
        font-size 16px
        margin 5px 45px 
        .normal
            padding 0px 80px
            background-color code-background
            color code-color
            border 2px solid
            border-radius: 10px;
            border-color transparent
            white-space pre
        .editMode
            padding 0px 80px
            background-color code-background
            color code-color
            border 2px solid
            border-radius: 10px;
            border-color transparent
            white-space pre
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .rightClick
            padding 0px 80px
            background-color code-background
            color code-color
            border 2px solid
            border-radius: 10px;
            border-color my-blue
            box-shadow 0px 0px 5px my-blue
            white-space pre
        .editing
            padding 20px
            i
                float right
                margin 10px


    .img-type
        text-align center
        margin 5px 20px
        .normal
            padding 10px
            border 2px solid
            border-radius: 10px;
            border-color transparent
        .editMode
            padding 10px
            border 2px solid
            border-radius: 10px;
            border-color transparent
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .rightClick
            padding 10px
            border 2px solid
            border-radius: 10px;
            border-color my-blue
            box-shadow 0px 0px 5px my-blue
        .editing
            padding 20px
            border-radius: 10px;
            text-align center
            .left-side
                float left
                text-align left 
                margin-top 20px
                margin-left 45px
                button
                    margin-right 20px
            .right-side
                flaot right
                text-align right 
                margin-top 20px
                margin-right 45px
                .check-icon
                    margin 10px
        
    

i
    margin 0 10px 0 10px
    cursor pointer
    color my-blue

