header-height = 40px
left-width = 240px
my-blue = rgb(24, 144, 255)
code-background = rgb(90, 90, 90)
code-color = rgb(170, 230, 255)

.note-page
    position fixed
    padding 20px 30px
    margin 0
    top header-height
    left left-width
    right 0
    bottom 0
    overflow auto
    word-break break-all
    .title
        font-size 24px
        text-align center
        margin-bottom 30px
    .time
        float right
        font-size 14px
        color #bbb
    .edit-icon
        float right
        font-size 20px
        color my-blue
        
            
    .h1-type
        font-size 22px
        margin 5px 0
        .normal
            padding 2px 7px
        .editMode
            padding 0 5px
            border 2px solid
            border-radius 10px;
            border-color transparent
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .rightClick
            padding 0 5px
            border 2px solid
            border-radius 10px;
            border-color my-blue
            box-shadow 0px 0px 5px my-blue
                
        .editing
            padding 20px

    .h2-type
        font-size 20px
        margin 5px 15px
        .normal
            padding 2px 7px
        .editMode
            padding 0 5px
            border 2px solid
            border-radius 10px;
            border-color transparent
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .rightClick
            padding 0 5px
            border 2px solid
            border-radius 10px;
            border-color my-blue
            box-shadow 0px 0px 5px my-blue
        .editing
            padding 20px

    .h3-type
        font-size 18px
        margin 5px 30px
        .normal
            padding 2px 7px
        .editMode
            padding 0 5px
            border 2px solid
