header-height = 40px
left-width = 200px
my-blue = rgb(24, 144, 255)
code-background = rgb(90, 90, 90)
code-color = rgb(170, 230, 255)

.note-page
    position fixed
    padding 20px 30px
    margin 0
    top header-height
    left left-width
    right 0
    bottom 0
    overflow auto
    word-break break-all
    .title
        font-size 24px
        text-align center
        margin-bottom 30px
    .time
        float right
        font-size 14px
        color #bbb
    .edit-icon
        float right
        font-size 20px
        color my-blue
        
            
    .h1-type
        font-size 22px
        margin 5px 0
        .normal
            padding 2px 7px
        .editMode
            padding 0 5px
            border 2px solid
            border-radius 10px;
            border-color transparent
            &:hover, :active
                border-color my-blue
                box-shadow 0px 0px 5px my-blue
        .editing
            padding 20px






        
    .h2-type
        font-size 20px
        margin 5px 15px
    .h3-type
        font-size 18px
        margin 5px 30px
    .p-type
        font-size 16px
        margin 5px 45px 
    .img-type
        text-align center
        margin 5px 0
    .code-type
        font-size 16px
        margin 5px 45px 
        padding 0 80px
        background-color code-background
        color code-color
        border 2px solid
        border-radius: 10px;
        border-color code-background

i
    margin 0 10px 0 10px
    cursor pointer
    color my-blue


