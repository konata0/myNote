header-height = 40px
left-width = 200px
my-blue = rgb(24, 144, 255)

.note-page
    position fixed
    padding 20px 30px
    margin 0
    top header-height
    left left-width
    right 0
    bottom 0
    overflow auto
    word-break break-all
    .title
        font-size 24px
        text-align center
        margin-bottom 30px
    .time
        float right
        font-size 14px
        color #bbb
    .h1-type
        font-size 22px
        margin-left 0
        margin-right 0
    .h2-type
        font-size 20px
        margin-left 15px
        margin-right 15px
    .h3-type
        font-size 18px
        margin-left 30px
        margin-right 30px
    .p-type
        font-size 16px
        margin-left 45px
        margin-right 45px


